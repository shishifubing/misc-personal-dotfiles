{
    "telemetry.telemetryLevel": "off",
    "keyboard.dispatch": "keyCode",
    // it is needed for the key remap to work

    // window
    "window.menuBarVisibility": "toggle",
    "window.openFilesInNewWindow": "off",
    "window.zoomLevel": -1,
    //

    // editor
    "editor.bracketPairColorization.enabled": true,
    "editor.fontFamily": "'Inconsolata'",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.renderWhitespace": "trailing",
    "editor.trimAutoWhitespace": true,
    "editor.quickSuggestions": true,
    "editor.quickSuggestionsDelay": 0,
    "editor.minimap.enabled": false,
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.fontSize": 20,
    "editor.rulers": [79],
    "editor.accessibilitySupport": "off",
    "editor.suggestSelection": "first",
    "editor.formatOnPaste": true,
    "editor.maxTokenizationLineLength": 999999,
    "editor.cursorSmoothCaretAnimation": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.visible": true,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.labelFormat": "long",
    "workbench.editor.limit.value": 999,
    "workbench.panel.opensMaximized": "always",
    "workbench.editor.enablePreview": false,
    "workbench.colorTheme": "Default High Contrast",
    "workbench.colorCustomizations": {
        "contrastBorder": "#bf3eff00",
        "editor.selectionHighlightBorder": "#bf3eff",
        "focusBorder": "#bf3eff",
        "statusBar.border": "#bf3eff00",
        "statusBar.debuggingBackground": "#bf3eff80",
        "editor.lineHighlightBorder": "#000000",
        "editor.selectionBackground": "#bf3eff",
        "editor.selectionForeground": "#ffffff",
        "editorCursor.foreground": "#bf3eff",
        "editorCursor.background": "#ffffff",
        "editorIndentGuide.activeBackground": "#bf3eff",
        "editorIndentGuide.background": "#ffff54",
        "editorRuler.foreground": "#bf3eff",
        "editorBracketMatch.border": "#bf3eff",
        "editorBracketMatch.background": "#000000"
    },
    //

    // git
    "git.autofetch": true,
    "git.confirmSync": false,
    //

    // explorer
    "explorer.incrementalNaming": "smart",
    "explorer.openEditors.visible": 999,
    //

    // random stuff
    "files.trimTrailingWhitespace": true,
    "zenMode.centerLayout": false,
    "zenMode.silentNotifications": false,
    "json.maxItemsComputed": 999999,
    "python.formatting.autopep8Args": [
        "--indent-size=4",
        "--aggressive",
        "--aggressive"
    ],
    "python.autoComplete.addBrackets": true,
    "shellcheck.exclude": [
        //"SC1091",
        //"SC1090",
        //"SC2155",
        //"SC2120",
        //"SC2119",
        //"SC2016",
        "SC2001", // use variable expansion instead of sed
        "SC2028" // echo may not expand escape sequences, use printf
    ],
    //

    // prettier settings
    "prettier.tabWidth": 4,
    "prettier.useTabs": false,
    "prettier.enable": true,
    "prettier.printWidth": 79,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[shellscript]": {
        "editor.defaultFormatter": "foxundermoon.shell-format"
    },
    "[yaml]": {
        "editor.tabSize": 4
    },
    "editor.tabCompletion": "on",
    "workbench.editor.showTabs": false,
    //"editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.dragAndDrop": false,
    "editor.detectIndentation": false,
    "editor.minimap.renderCharacters": false,
    "editor.smoothScrolling": true,
    "editor.suggest.insertMode": "replace",
    "editor.suggest.showStatusBar": true,
    "files.trimFinalNewlines": true,
    "workbench.activityBar.visible": false,
    "workbench.enableExperiments": false,
    "workbench.tree.indent": 25,
    "workbench.tree.renderIndentGuides": "always",
    "window.autoDetectHighContrast": false,
    "explorer.autoReveal": "focusNoScroll",
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "redhat.telemetry.enabled": false,
    "git.enableSmartCommit": true,
    "prettier.bracketSpacing": false,
    "[helm]": {
        // "file
    }
    //

    // vim
    /*
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true, // highlight previous search
    "vim.autoindent": true,
    "vim.searchHighlightColor": "#bf3eff",
    "vim.normalModeKeyBindings": [
        {
            "before": ["<C-s-k>"],
            "commands": [":set hls!<CR>"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        }
    ],
    "vim.handleKeys": {
        "<C-w>": false,
        "<C-n>": false,
        "<C-j>": false
    },
    */

    //"files.exclude": {
    //    "**/.classpath": true,
    //"**/.project": true,
    //    "**/.settings": true,
    //    "**/.factorypath": true
    //}
}
